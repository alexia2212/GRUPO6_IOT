<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/usuarios1"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Imagen a la izquierda -->
    <ImageView
        android:id="@+id/imagen1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/stuardo3" />

    <!-- Contenedor central (nombre y texto) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <!-- Nombre en el centro -->
        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stuardo Lucho"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Texto debajo del nombre -->
        <TextView
            android:id="@+id/condicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CondiciÃ³n: Egresado"

            android:textSize="14sp"

            android:textStyle="normal" />
    </LinearLayout>

    <!-- Texto a la derecha -->
    <TextView
        android:id="@+id/funcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barra"
        android:layout_marginTop="23dp"
        android:layout_marginRight="40dp"
        android:textSize="24sp"
        android:textStyle="normal" />
</LinearLayout>

