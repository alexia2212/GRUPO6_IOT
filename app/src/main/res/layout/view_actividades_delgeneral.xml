<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actividadesDel"
    android:layout_width="290dp"
    android:layout_height="150dp"
    android:background="#D9D9D9"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    android:layout_marginStart="12dp"
    app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="150dp"
            android:animateLayoutChanges="true"
            android:background="#D9D9D9"
            android:orientation="vertical">
                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/nombreActividad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Voley Mixto"
                    android:layout_marginStart="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:animateLayoutChanges="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/delegado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombreActividad"
                        android:fontFamily="sans-serif-black"
                        android:text="Delegado:"
                        android:layout_marginStart="10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/delegadoActividad"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombreActividad"
                        android:layout_marginStart="36dp"
                        android:layout_marginEnd="56dp"
                        android:layout_toEndOf="@+id/delegado"
                        android:text="Angie Alejandro" />
                    <TextView
                        android:id="@+id/idActividad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout2"
                    android:animateLayoutChanges="true"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/descripcionG"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/delegado"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Descripcion:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <TextView

                        android:id="@+id/descripcionActividad"
                        android:layout_width="160dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="38dp"
                        android:layout_below="@+id/nombreDelegado"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="1dp"
                        android:layout_toEndOf="@+id/descripcionG"
                        android:text="Entrenamientos para semana y campeonatos" />
                </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/masinfoactividad"
            android:layout_width="96dp"
            android:layout_height="35dp"
            android:layout_below="@+id/descripcionContenido"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="155dp"
            android:layout_marginBottom="334dp"
            android:backgroundTint="#5BB4BE"
            android:fontFamily="sans-serif-medium"
            android:onClick="masinfo"
            android:text="MasInfo"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

</androidx.cardview.widget.CardView>
