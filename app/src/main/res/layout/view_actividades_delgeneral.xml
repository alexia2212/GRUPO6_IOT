<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actividadesDel"
    android:layout_width="350dp"
    android:layout_height="230dp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Voley Mixto"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/delegado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombreActividad"
                android:fontFamily="sans-serif-black"
                android:text="Delegado:"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:typeface="sans" />

            <TextView
                android:id="@+id/delegadoActividad"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombreActividad"
                android:layout_marginStart="27dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="56dp"
                android:layout_toEndOf="@+id/delegado"
                android:text="Angie Alejandro" />

            <TextView
                android:id="@+id/descripcionG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/delegado"
                android:layout_marginStart="24dp"
                android:layout_marginTop="35dp"
                android:fontFamily="sans-serif-black"
                android:text="Descripcion:"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/descripcionActividad"
                android:layout_width="160dp"
                android:layout_height="38dp"
                android:layout_below="@+id/nombreDelegado"
                android:layout_marginStart="32dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/descripcionG"
                android:text="Entrenamientos para semana y campeonatos" />
        </LinearLayout>
    </LinearLayout>
        <Button
            android:id="@+id/masinfoactividad"
            android:layout_width="99dp"
            android:layout_height="35dp"
            android:layout_below="@+id/descripcionContenido"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="147dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="165dp"
            android:layout_marginBottom="334dp"
            android:backgroundTint="#5BB4BE"
            android:fontFamily="sans-serif-medium"
            android:onClick="masinfo"
            android:text="MasInfo"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

</androidx.cardview.widget.CardView>
