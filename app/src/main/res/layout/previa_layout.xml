<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vistaprevia"
    android:layout_width="410dp"
    android:layout_height="600dp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <!-- Icono en la esquina izquierda superior -->
        <ImageView
            android:id="@+id/icono_izquierda"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/trash_solid" />

        <!-- Icono en la esquina derecha superior -->
        <ImageView
            android:id="@+id/icono_derecha"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_edit_24" />

        <!-- Contenedor de texto en el centro -->
        <TextView
            android:id="@+id/texto_central"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Vista Previa"
            android:textSize="26sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="612dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <!-- Imagen en la parte superior -->

        <!-- Contenedor de texto -->


        <ImageView
            android:id="@+id/imagen1"
            android:layout_width="237dp"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="58dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/voley1" />

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!-- Texto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="17dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Convocatoria"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Descripción del evento"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="14/09/2023"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/ubicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:text="Ubicación del evento"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <!-- Botones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="161dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/boton1"
                        android:layout_width="380dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="@color/gris"
                        android:gravity="center"
                        android:text="Ver lista de alumnos" /> <!-- Centrar el texto -->

                    <Button
                        android:id="@+id/boton2"
                        android:layout_width="380dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="@color/turquesa"
                        android:gravity="center"
                        android:text="Finalizar Evento" /> <!-- Centrar el texto -->

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
