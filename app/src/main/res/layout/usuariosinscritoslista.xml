<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vistaprevia"
    android:layout_width="400dp"
    android:layout_height="650dp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/texto_central"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Usuarios Inscritos"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/switch_usuario"
            android:layout_width="460dp"
            android:layout_height="wrap_content"
            android:text="Sin funciÃ³n"
            android:textColor="@color/white"
            android:backgroundTint="@color/gris"
            android:layout_below="@id/texto_central"
            android:layout_marginTop="26dp"
            android:gravity="end" />

        <Button
            android:id="@+id/switch_usuario2"
            android:layout_width="240dp"
            android:text="Todos"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/turquesa"
            android:layout_below="@id/texto_central"
            android:layout_marginTop="26dp" />



        <ListView
            android:id="@+id/lista_usuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/switch_usuario"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
