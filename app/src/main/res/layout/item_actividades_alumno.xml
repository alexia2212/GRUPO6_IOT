<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgActividad"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:foregroundGravity="center"
            app:srcCompat="@mipmap/evento5" />

        <ImageView
            android:id="@+id/dif1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/dif" />

        <TextView
            android:id="@+id/textViewNombreActividad"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgActividad"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="92dp"
            android:text="Futsal damas"
            android:textColor="@android:color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDescripcionActividad"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewNombreActividad"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="32dp"
            android:text="No te pierdas el debut de la Fibra en este evento el prÃ³ximo lunes."
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btnVerActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="26dp"
            android:layout_toEndOf="@id/textViewDescripcionActividad"
            app:srcCompat="@mipmap/right" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
