<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="#D3D3D3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OlvidoContrasena">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="234dp"
        android:layout_height="218dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="89dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textPregunta"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="27dp"
        android:elevation="10dp"

        android:text="¿Olvidaste la contraseña?"
        app:layout_constraintBottom_toTopOf="@+id/texto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="309dp"
        android:layout_height="60dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="23dp"
        android:elevation="10dp"
        android:text="Introduce el correo con el que accedes a la app. En unos minutos recibirás en ese mismo correo un mail para realizar el cambio."
        app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPregunta" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="88dp"
        android:elevation="10dp"
        android:ems="10"

        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto" />

    <Button
        android:id="@+id/buttonEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="125dp"
        android:text="Enviar email"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="531dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="73dp"
        android:elevation="10dp"

        android:layout_height="53dp"
        app:srcCompat="@drawable/baseline_mail_lock_24"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="245dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="318dp"
        android:layout_height="498dp"
        android:background="@color/white"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="166dp" />
</androidx.constraintlayout.widget.ConstraintLayout>